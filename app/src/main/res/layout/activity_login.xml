<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        android:background="@drawable/background_one"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/logo_main" />

                <com.romainpiel.shimmer.ShimmerTextView
                    android:id="@+id/txtLoginTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="লগইন করুন"
                    android:textColor="@color/card_bg_dark_color"
                    android:textSize="28sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/cell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_border"
                    android:drawableRight="@drawable/ic_call"
                    android:hint="মোবাইল নাম্বার"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:padding="16dp"
                    android:textColor="@color/card_bg_dark_color"
                    android:textColorHint="@color/card_bg_dark_color"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_border"
                    android:drawableRight="@drawable/ic_lock"
                    android:hint="পাসওয়ার্ড"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:padding="16dp"
                    android:textColor="@color/card_bg_dark_color"
                    android:textColorHint="@color/card_bg_dark_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout2"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ac_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_border"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:focusable="false"
                    android:hint="একাউন্টের ধরন"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textColor="@color/card_bg_dark_color"
                    android:textColorHint="@color/card_bg_dark_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout3"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgbtnonfocus"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="লগইন"
                    android:textColor="#000"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bgbtnonfocus"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="নতুন নিবন্ধন"
                    android:textColor="#000"
                    android:layout_marginBottom="10dp"
                    android:textColorHint="@color/card_bg_dark_color"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>
