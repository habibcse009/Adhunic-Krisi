                        <TextView
                            android:gravity="right"
                            android:padding="1dip"
                            android:text="০.১২ "
                            android:textColor="@color/Asphalt_grey"
                            android:textSize="25sp" />
                    </TableRow>


                </TableLayout>


            </LinearLayout>
